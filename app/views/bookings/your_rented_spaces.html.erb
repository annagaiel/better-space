<div class="row" ng-app="app">
  <div ng-controller="bookingCtrl" ng-init="your_rented_spaces_setup()">
    <div class="row">
      <div class="col-md-3">
        <ul>
          <li>
            <%= link_to "Your Bookings", your_bookings_path %>
          </li>
          <li>
            <%= link_to "Your Rented Spaces", your_rented_spaces_path %>
          </li>
        </ul>
      </div>
      <div class="col-md-9">
        <h1>Your Rented Spaces</h1>
        <% if @rented_spaces %>
        <table class="table">
          <tr>
            <th><a href="#" ng-click="toggleOrder('move_in')">Move In</a></th>
            <th><a href="#" ng-click="toggleOrder('move_out')">Move Out</a></th>
            <th><a href="#" ng-click="toggleOrder('price')">Price</a></th>
            <th><a href="#" ng-click="toggleOrder('status')">Status</a></th>
            <th><a href="#" ng-click="toggleOrder('host')">Space Host</a></th>
          </tr>
          <tr ng-repeat="rented_space in rentedSpaces | orderBy: orderAttribute:descending">
            <td>{{ rented_space.move_in }}</td>
            <td>{{ rented_space.move_out }}</td>
            <td>{{ rented_space.price }}</td>
            <td>{{ rented_space.approved_status }}</td>
            <td>{{ rented_space.host }}</td>
          </tr>
        </table>
        <% else %>
        <p> You did not book any spaces yet.</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
