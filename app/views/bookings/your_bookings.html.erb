<div class="row" ng-app="app">
  <div ng-controller="bookingCtrl" ng-init="your_bookings_setup()">
    <div class="row">
      <div class="col-md-3">
        <ul>
          <li>
            <%= link_to "Your Bookings", your_bookings_path %>
          </li>
          <li>
            <%= link_to "Your Rented Spaces", your_rented_spaces_path %>
          </li>
        </ul>
      </div>
      <div class="col-md-9">
        <h1>Your Bookings</h1>
        <table class="table">
          <tr>
            <th><a href="#" ng-click="toggleOrder('title')">Title</a></th>
            <th><a href="#" ng-click="toggleOrder('move_in')">Move In</a></th>
            <th><a href="#" ng-click="toggleOrder('move_out')">Move Out</a></th>
            <th><a href="#" ng-click="toggleOrder('renter')">Renter</a></th>
            <th><a href="#" ng-click="toggleOrder('price')">Price</a></th>
            <th><a href="#" ng-click="toggleOrder('status')">Status</a></th>
            <th>Action</th>
          </tr>
          <tr ng-repeat="space_listing in spaceListings | orderBy: orderAttribute:descending">
            <td>{{ space_listing.title }}</td>
            <td ng-repeat="booking in space_listing.bookings">
              {{ booking.move_in }}
            </td>
            <td ng-repeat="booking in space_listing.bookings">
              {{ booking.move_out }}
            </td>
            <td ng-repeat="booking in space_listing.bookings">
              {{ booking.renter }}
            </td>
            <td ng-repeat="booking in space_listing.bookings">
              {{ booking.price }}
            </td>
            <td ng-repeat="booking in space_listing.bookings">
              {{ booking.approved_status }}
            </td>
            <td ng-repeat="booking in space_listing.bookings">
              <a data-method="patch" href="/bookings/{{booking.id}}/toggle_approved_status">Toggle Approve Status</a>
            </td>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>
