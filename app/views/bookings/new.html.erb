<div id="content">
  <div class="container">
    <div class="row">
      <div class="inner_container">
        <h2>Booking Space</h2>
        <%= form_for @booking do |f| %>
        <div class="row center">
          <div class="col-md-6 col-xs-6">
            <%= f.label :move_in, "Move In" %>
            <div class="input-group date mg-check-in focus">
              <div class="input-group-addon"><i class="fa fa-calendar"></i></div>
              <%= f.text_field :move_in, class:"form-control input-group date", "data-provide"=>"datepicker", placeholder:"mm/dd/yyyy"%>
            </div>
          </div>
          <div class="col-md-6 col-xs-6">
            <%= f.label :move_out, "Move Out" %>
            <div class="input-group date mg-check-in focus">
              <div class="input-group-addon"><i class="fa fa-calendar"></i></div>
              <%= f.text_field :move_out, class:"form-control input-group date", "data-provide"=>"datepicker", placeholder:"mm/dd/yyyy"%>
            </div>
          </div>
        </div>
        <br>
        <div class="row">
          <div class="col-md-6 col-xs-6">
            <% if @space_listing %>
            <label>Rent per Day:</label>
            <div class="input-group">
              <span class="input-group-addon">$</span>
              <input id="day_rent" class="form-control" disabled="true" value="<%= number_with_precision @space_listing.day_rent, :precision => 2 %>" ></input>
            </div>
            <%= f.hidden_field :space_listing_id, value:"#{@space_listing.id}" %>
            <% end %>
          </div>
          <div class="col-md-6 col-xs-6">
            <%= f.label :price, "Price: " %>
            <div class="input-group">
              <span class="input-group-addon">$</span>
              <%= f.text_field :price, disabled:false, class:"form-control", 'aria-label':'Amount (to the nearest dollar)' %>
            </div>
          </div>
        </div>
        <br>
        <div class="row">
          <div class="col-md-12 col-xs-6">
            <%= f.submit "Book Now", class:"btn btn-success btn-block" %>
          </div>
        </div>
        <br>
        <% end %>
      </div>
    </div>
  </div>
</div>
