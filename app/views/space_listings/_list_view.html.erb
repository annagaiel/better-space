<!-- begin:product -->
<div class="row container-realestate">
  <div dir-paginate="space_listing in spaceListings | filter:q | orderBy:'day_rent':descending | itemsPerPage: pageSize" current-page="currentPage" pagination-id="listingsPagination" class="col-md-12 col-sm-12 col-xs-12">
    <div class="property-container">
      <div class="property-content-list">
        <div class="property-image-list">
          <img src="{{space_listing.images[0]['image_src'].url}}" alt="">
          <div class="property-price">
            <h4> {{ space_listing.title }} </h4>
            <span>${{ space_listing.day_rent | number:2 }}<small>/day</small></span>
          </div>
          <div class="property-status">
            <span>For Rent</span>
          </div>
          <div class="property-footer">
            <a data-method="patch" href="/space_listings/{{space_listing.id}}/toggle_favorite" title="Add to favorite"><i class="fa fa-heart"></i></a>
            <a href="#" title="Contact Agent"><i class="fa fa-envelope"></i></a>
          </div>
        </div>
        <div class="property-text">
          <h3><a href="/space_listings/{{space_listing.id}}">{{space_listing.title}}</a>
            <small>{{ space_listing.address }}, {{ space_listing.city }}</small></h3>
            <p>{{ space_listing.description }}</p>
            <p><a href="/bookings/new?space_listing_id={{space_listing.id}}" class="btn btn-success">Book Space</a></p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- end:product -->

  <dir-pagination-controls boundary-links="true" pagination-id="listingsPagination" on-page-change="pageChangeHandler(newPageNumber)" template-url="dirPagination.tpl.html"></dir-pagination-controls>
</div>
<!-- end:article -->
<%= render "shared/sidebar" %>
</div>
</div>
<!-- end:ng-app -->
