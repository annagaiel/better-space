<% if @images %>
  <div class="row">
    <% @images.each do |image| %>
      <div class="col-md-4">
        <div class="panel panel-default">
          <div class="panel-heading preview">
            <%= image_tag image.image_url %>
          </div>
          <div class="panel-body">
            <span class="pull-right">
                <i class="fa fa-times fa-lg"></i>
            </span>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
